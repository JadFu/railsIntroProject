<!-- app/views/pokemons/index.html.erb -->

<h1>Pokemons</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr class="d-flex align-items-center">
        <td><%= pokemon.id %></td>
        <td>
          <div class="crop">
            <%= link_to pokemon_path(pokemon) do %>
              <%= image_tag pokemon.image class: "img-fluid", style: "width: 100px; height: 60px;" %>
            <% end %>
          </div>
        </td>
        <td><%= link_to pokemon.name, pokemon_path(pokemon) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav class="float-right mt-2">
  <ul class="pagination pagination-sm">
    <% if @pokemons.previous_page %>
      <li class="page-item">
        <%= link_to 'Previous', pokemons_path(page: @pokemons.previous_page), class: 'page-link' %>
      </li>
    <% end %>

    <% if @pokemons.next_page %>
      <li class="page-item">
        <%= link_to 'Next', pokemons_path(page: @pokemons.next_page), class: 'page-link' %>
      </li>
    <% end %>
  </ul>
</nav>

