<div class="row">
  <div class="col-md-6 d-flex flex-column align-items-end">
    <h1><%= @pokemon.name %></h1>
    <p>ID: <%= @pokemon.id %></p>
    <img src="<%= @pokemon.image %>" alt="Image">
  </div>
  <div class="col-md-6">
    <div class="d-flex flex-column">
      <h2>Type</h2>
        <p>Type 1: <%= link_to Type.find_by(id: @pokemon.type1)&.name, category_path(@pokemon.type1) %></p>
      <% if @pokemon.type2.present? %>
        <p>Type 2: <%= link_to Type.find_by(id: @pokemon.type2)&.name, category_path(@pokemon.type2) %></p>
      <% end %>

      <h2>Stats</h2>
      <p>HP: <%= @pokemon.HP %><% if @pokemon.HP > 100 %> *<% end %></p>
      <p>Attack: <%= @pokemon.ATK %><% if @pokemon.ATK > 100 %> *<% end %></p>
      <p>Defense: <%= @pokemon.DEF %><% if @pokemon.DEF > 100 %> *<% end %></p>
      <p>Special Attack: <%= @pokemon.SA %><% if @pokemon.SA > 100 %> *<% end %></p>
      <p>Special Defense: <%= @pokemon.SD %><% if @pokemon.SD > 100 %> *<% end %></p>
      <p>Speed: <%= @pokemon.SP %><% if @pokemon.SP > 100 %> *<% end %></p>
      <p>Total: <%= @pokemon.HP + @pokemon.ATK + @pokemon.DEF + @pokemon.SA + @pokemon.SD + @pokemon.SP %><% if @pokemon.HP + @pokemon.ATK + @pokemon.DEF + @pokemon.SA + @pokemon.SD + @pokemon.SP > 550 %> *<% end %></p>

      <div class="d-flex">
        <%= link_to 'Edit', edit_pokemon_path(@pokemon.id), class: 'btn btn-primary mr-2' %>
        <%= link_to 'Delete', pokemon_path(@pokemon), method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
