<h1>Pokemon Search</h1>

<div class="container">
  <h3>Search Results</h3>

  <% if @pokemons.any? %>
    <table class="table table-bordered">
      <thead>
        <tr class="d-flex align-items-center">
          <th class="flex-grow-1">ID</th>
          <th class="flex-grow-1">Image</th>
          <th class="flex-grow-1">Name</th>
        </tr>
      </thead>
      <tbody>
        <% @pokemons.each do |pokemon| %>
          <tr class="d-flex align-items-center">
            <td class="flex-grow-1"><%= pokemon.id %></td>
            <td class="flex-grow-1">
              <div class="d-flex justify-content-center">
                <div class="crop">
                  <%= link_to pokemon_path(pokemon) do %>
                    <%= image_tag pokemon.image, class: "img-fluid", style: "width: 100px; height: 100px;", alt: "image" %>
                  <% end %>
                </div>
              </div>
            </td>
            <td class="flex-grow-1"><%= link_to pokemon.name, pokemon_path(pokemon) %><% if pokemon.HP + pokemon.ATK + pokemon.DEF + pokemon.SA + pokemon.SD + pokemon.SP > 550 %> (Stronk)<% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No results found.</p>
  <% end %>
</div>