<h1>Edit Pokemon</h1>

<%= form_with(model: @pokemon, url: pokemon_path(@pokemon), method: :patch) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :HP %>
    <%= form.number_field :HP, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :HP %>
    <%= form.number_field :HP, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :ATK %>
    <%= form.number_field :ATK, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :DEF %>
    <%= form.number_field :DEF, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :SA %>
    <%= form.number_field :SA, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :SD %>
    <%= form.number_field :SD, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :SP %>
    <%= form.number_field :SP, class: 'form-control' %>
  </div>

  <%= form.submit 'Update', class: 'btn btn-primary' %>
<% end %>
